// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                       String     @id @default(cuid())
  twitch_id                String     @unique
  username                 String
  display_name             String
  avatar_url               String?
  refresh_token            String?    @unique
  refresh_token_expires_at DateTime?
  created_at               DateTime   @default(now())
  updated_at               DateTime   @updatedAt
  workflows                Workflow[]
  triggers                 Trigger[]
  firstWord                FirstWord?
}

model Workflow {
  id         String    @id @default(uuid())
  name       String
  data       Json
  owner_id   String
  owner      User      @relation(fields: [owner_id], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  triggers   Trigger[]
}

model Trigger {
  id         String     @id
  type       String
  platform   String
  user_id    String
  user       User       @relation(fields: [user_id], references: [id])
  workflows  Workflow[]
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}

model FirstWord {
  id                  String             @id @default(uuid())
  twitch_id           String             @unique
  enabled             Boolean            @default(true)
  reply_message       String?
  owner_id            String             @unique
  owner               User               @relation(fields: [owner_id], references: [id])
  first_word_chatters FirstWordChatter[]
  audio_key           String?
  audio_volume        Int                @default(100)
  overlay_key         String
  created_at          DateTime           @default(now())
  updated_at          DateTime           @updatedAt
}

model FirstWordChatter {
  id                Int       @id @default(autoincrement())
  twitch_chatter_id String
  twitch_channel_id String
  first_word_id     String
  first_word        FirstWord @relation(fields: [first_word_id], references: [id], onDelete: Cascade)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@unique([twitch_chatter_id, first_word_id])
}
