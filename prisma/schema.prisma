// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  twitch_id    String        @unique
  username     String
  display_name String
  avatar_url   String?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  auth         Auth?
  workflows    Workflow[]
  triggers     Trigger[]
  firstWord    FirstWord?
  clipShoutout ClipShoutout?
}

model Auth {
  id                      String    @id @default(cuid())
  user_id                 String    @unique
  user                    User      @relation(fields: [user_id], references: [id])
  twitch_refresh_token    String?   @unique
  twitch_token_expires_at DateTime?
  created_at              DateTime  @default(now())
  updated_at              DateTime  @updatedAt
}

model Workflow {
  id         String    @id @default(uuid())
  name       String
  data       Json
  owner_id   String
  owner      User      @relation(fields: [owner_id], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  triggers   Trigger[]
}

model Trigger {
  id         String     @id
  type       String
  platform   String
  user_id    String
  user       User       @relation(fields: [user_id], references: [id])
  workflows  Workflow[]
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}

model FirstWord {
  id                  String             @id @default(uuid())
  twitch_id           String             @unique
  enabled             Boolean            @default(true)
  reply_message       String?
  twitch_bot_id       String?
  owner_id            String             @unique
  owner               User               @relation(fields: [owner_id], references: [id])
  first_word_chatters FirstWordChatter[]
  audio_key           String?
  audio_volume        Int                @default(100)
  overlay_key         String
  created_at          DateTime           @default(now())
  updated_at          DateTime           @updatedAt
}

model FirstWordChatter {
  id                Int       @id @default(autoincrement())
  twitch_chatter_id String
  twitch_channel_id String
  first_word_id     String
  first_word        FirstWord @relation(fields: [first_word_id], references: [id], onDelete: Cascade)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@unique([twitch_chatter_id, first_word_id])
}

model ClipShoutout {
  id                     String   @id @default(uuid())
  twitch_id              String   @unique
  enabled                Boolean  @default(true)
  twitch_bot_id          String
  reply_message          String?
  enabled_clip           Boolean  @default(true)
  enabled_highlight_only Boolean  @default(false)
  overlay_key            String
  owner_id               String   @unique
  owner                  User     @relation(fields: [owner_id], references: [id])
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
}
