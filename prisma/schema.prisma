// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String     @id @default(cuid())
  twitch_id    String     @unique
  username     String
  display_name String
  avatar_url   String?
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  auth         Auth?
  workflows    Workflow[]
  triggers     Trigger[]
  widgets      Widget[]
}

model Auth {
  id                      String    @id @default(cuid())
  user_id                 String    @unique
  user                    User      @relation(fields: [user_id], references: [id])
  twitch_refresh_token    String?   @unique
  twitch_token_expires_at DateTime?
  created_at              DateTime  @default(now())
  updated_at              DateTime  @updatedAt
}

model Workflow {
  id         String    @id @default(uuid())
  name       String
  data       Json
  owner_id   String
  owner      User      @relation(fields: [owner_id], references: [id])
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  triggers   Trigger[]
}

model Trigger {
  id         String     @id
  type       String
  platform   String
  user_id    String
  user       User       @relation(fields: [user_id], references: [id])
  workflows  Workflow[]
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}

model Widget {
  id               String        @id @default(uuid())
  twitch_id        String
  enabled          Boolean       @default(true)
  overlay_key      String?
  owner_id         String
  owner            User          @relation(fields: [owner_id], references: [id])
  first_word       FirstWord?
  clip_shoutout    ClipShoutout?
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
  widget_type      WidgetType    @relation(fields: [widget_type_slug], references: [slug])
  widget_type_slug String

  @@unique([twitch_id, widget_type_slug])
  @@unique([owner_id, widget_type_slug])
}

model WidgetType {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  display_name String
  widgets      Widget[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FirstWord {
  id                  String             @id @default(uuid())
  reply_message       String?
  twitch_bot_id       String?
  first_word_chatters FirstWordChatter[]
  audio_key           String?
  audio_volume        Int                @default(100)
  widget_id           String             @unique
  widget              Widget             @relation(fields: [widget_id], references: [id])
  created_at          DateTime           @default(now())
  updated_at          DateTime           @updatedAt
}

model FirstWordChatter {
  id                Int       @id @default(autoincrement())
  twitch_chatter_id String
  twitch_channel_id String
  first_word_id     String
  first_word        FirstWord @relation(fields: [first_word_id], references: [id], onDelete: Cascade)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  @@unique([twitch_chatter_id, first_word_id])
}

model ClipShoutout {
  id                     String   @id @default(uuid())
  twitch_bot_id          String
  reply_message          String?
  enabled_clip           Boolean  @default(true)
  enabled_highlight_only Boolean  @default(false)
  widget_id              String   @unique
  widget                 Widget   @relation(fields: [widget_id], references: [id])
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
}
